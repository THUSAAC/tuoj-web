extends layout

block content
	div.container
		p 编辑比赛: #{contestname}
		form(class="" method='POST', action='/editcontests/#{contestid}/edited')
			
			div.form-group
				label 起始时间
				div.row
					div.col-xs-6
						input.form-control(type='date', name='startdate', value='#{startdate}')
					div.col-xs-6
						input.form-control(type='time', name='starttime', value='#{starttime}')
			div.form-group
				label 终止时间
				div.row
					div.col-xs-6
						input.form-control(type='date', name='enddate', value='#{enddate}')
					div.col-xs-6
						input.form-control(type='time', name='endtime', value='#{endtime}')
			div.form-group
				label 比赛名称
				input.form-control(type='text', name='contestname',value='#{name}')
			div.form-group
				label 题目列表
				textarea.form-control(name='gitlist', cols='70', rows=6) #{gitlist}
			div.form-group
				label
					- if (hidden) {
						input(type='checkbox' value='hidden' name='hidden' checked) 
					- } else {
						input(type='checkbox' value='hidden' name='hidden') 
					- }
					span 对普通用户隐藏比赛
			div.form-group
				label
					- if (released) {
						input(type='checkbox' value='released' name='released' checked) 
					- } else {
						input(type='checkbox' value='released' name='released') 
					- }
					span 对普通用户显示成绩
			div.form-group
				input.btn.btn-primary(type='submit' value='修改')
	
